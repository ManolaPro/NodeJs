<h1>Card</h1>
<div id="card">
    {{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Summary</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{id}}">Delete</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p><strong>Price </strong><span class="price"> {{price}}</span></p>

    <form action="/orders" method="POST">
        <button type="submit" class="btn">Make order</button>    
    </form>
{{else}}
    <p>Card null</p>
{{/if}}
</div>
